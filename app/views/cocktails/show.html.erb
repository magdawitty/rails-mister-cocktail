<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 400, height: 300, crop: :fill %>
<% end %>

<div class="banner-content">
  <h1><%= @cocktail.name %></h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2 class='text-center'></h2>
      <h4>  The cocktail includes... </h4>
      <%  @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>
        <%= dose.ingredient.name %>

        <%= link_to 'delete that incredient', dose_path(dose), method: :delete %>

      </li>
      <% end %>

      <!-- copy delete method from livecode example -->

      <br>

      <h2>Add a dose</h2>
      <%= render 'doses/form' %>
    </div>
  </div>
</div>

<br>

<%= link_to 'Back to all the cocktails', cocktails_path, {class: "btn btn-primary"} %>

